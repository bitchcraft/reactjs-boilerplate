{
	"name": "reactjs-boilerplate",
	"version": "0.2.0",
	"private": true,
	"description": "",
	"workspaces": [
		"app",
		"common",
		"server"
	],
	"dependencies": {
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-module-resolver": "^2.7.1",
		"babel-plugin-react-transform": "^2.0.2",
		"babel-plugin-transform-runtime": "^6.15.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-flow": "^6.23.0",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-0": "^6.16.0",
		"webpack": "^3.11.0"
	},
	"devDependencies": {
		"autoprefixer": "^8.0.0",
		"babel-cli": "^6.18.0",
		"babel-core": "^6.20.0",
		"babel-eslint": "^8.2.2",
		"babel-jest": "^20.0.3",
		"babel-loader": "^6.2.9",
		"css-loader": "^0.26.1",
		"eslint": "^4.18.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-plugin-flowtype": "^2.46.1",
		"eslint-plugin-flowtype-errors": "^3.3.7",
		"eslint-plugin-import": "^2.9.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.7.0",
		"eventsource-polyfill": "^0.9.6",
		"expect": "^1.13.2",
		"fetch-mock": "^5.5.0",
		"flow-bin": "^0.60.0",
		"handlebars-loader": "^1.2.0",
		"hbs-cli": "^1.1.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^20.0.4",
		"node-sass": "^4.7.2",
		"nodemon": "^1.15.1",
		"postcss-loader": "^2.1.0",
		"react-transform-hmr": "^1.0.1",
		"sass-loader": "^6.0.6",
		"url-loader": "^0.5.7",
		"webpack-hot-middleware": "^2.21.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"jsx"
		],
		"moduleDirectories": [
			"node_modules",
			"app",
			"common"
		],
		"moduleNameMapper": {
			"^.+\\.(css|scss|scsshbs)$": "identity-obj-proxy"
		},
		"unmockedModulePathPatterns": [
			"react",
			"babel-loader",
			"babel-plugin-react-transform",
			"react-test-renderer",
			"npm-zepto",
			"babel-jest",
			"identity-obj-proxy"
		],
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		}
	},
	"config": {
		"hostname": "localhost",
		"port": 3000
	},
	"scripts": {
		"flow": "flow; test $? -eq 1 -o $? -eq 2",
		"test": "node_modules/jest/bin/jest.js",
		"dev-server": "NODE_ENV=development WEBPACK_HOT=true API_ENDPOINT=//$npm_package_config_hostname:$npm_package_config_port DEBUG=server:* node --max_old_space_size=4096 server/index.js",
		"prestart": "yarn install; yarn run test",
		"start": "yarn run nodemon",
		"bundle": "yarn install; yarn run test; yarn run bundle-js; yarn run render-template",
		"bundle-js": "yarn install; NODE_ENV=production ./node_modules/webpack/bin/webpack.js --progress",
		"render-template": "if ! [ -e ./build ]; then mkdir build; fi; hbs --data '{ \"bundle\": \"bundle.js\" }' ./server/views/index.handlebars -o ./build",
		"docker": "docker build --no-cache -t $(basename `git rev-parse --show-toplevel`):$(git rev-parse --short HEAD) .",
		"nodemon": "./node_modules/nodemon/bin/nodemon.js --config nodemon.json --exec yarn run dev-server"
	},
	"author": ""
}
