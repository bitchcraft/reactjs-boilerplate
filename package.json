{
	"name": "reactjs-boilerplate",
	"version": "0.2.0",
	"private": true,
	"description": "",
	"license": "BSD-3-Clause",
	"workspaces": [
		"app",
		"common",
		"server"
	],
	"dependencies": {
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-module-resolver": "^3.1.0",
		"babel-plugin-react-transform": "^3.0.0",
		"babel-plugin-transform-runtime": "^6.15.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-flow": "^6.23.0",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-0": "^6.16.0",
		"cross-env": "^5.1.3",
		"webpack": "^4.1.0"
	},
	"devDependencies": {
		"autoprefixer": "^8.1.0",
		"babel-cli": "^6.18.0",
		"babel-core": "^6.20.0",
		"babel-eslint": "^8.2.2",
		"babel-jest": "^22.4.1",
		"babel-loader": "^7.1.4",
		"babel-preset-minify": "^0.3.0",
		"cache-loader": "^1.2.2",
		"css-loader": "^0.28.10",
		"docdash": "^0.4.0",
		"eslint": "^4.18.2",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-formatter-pretty": "^1.3.0",
		"eslint-plugin-flowtype": "^2.46.1",
		"eslint-plugin-flowtype-errors": "^3.5.1",
		"eslint-plugin-import": "^2.9.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.7.0",
		"eventsource-polyfill": "^0.9.6",
		"expect": "^22.4.0",
		"fetch-mock": "^6.0.1",
		"flow-bin": "^0.66.0",
		"handlebars-loader": "github:zGrav/handlebars-loader",
		"hbs-cli": "^1.1.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^22.4.2",
		"jest-matchers": "^20.0.3",
		"jsdoc": "^3.5.5",
		"jsdoc-babel": "^0.3.0",
		"jsdoc-webpack-plugin": "^0.0.2",
		"mkdirp": "^0.5.1",
		"node-sass": "^4.7.2",
		"nodemon": "^1.17.1",
		"postcss-loader": "^2.1.1",
		"react-transform-hmr": "^1.0.1",
		"sass-loader": "^6.0.7",
		"thread-loader": "^1.1.5",
		"uglifyjs-webpack-plugin": "^1.2.2",
		"url-loader": "^1.0.1",
		"webpack-cli": "^2.0.10",
		"webpack-hot-middleware": "^2.21.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"jsx"
		],
		"moduleDirectories": [
			"node_modules",
			"app",
			"common"
		],
		"moduleNameMapper": {
			"^.+\\.(css|scss|scsshbs)$": "identity-obj-proxy"
		},
		"unmockedModulePathPatterns": [
			"react",
			"babel-loader",
			"babel-plugin-react-transform",
			"react-test-renderer",
			"jquery",
			"babel-jest",
			"identity-obj-proxy"
		],
		"transform": {
			"^.+\\.jsx?$": "babel-jest"
		}
	},
	"config": {
		"hostname": "localhost",
		"port": 3000
	},
	"scripts": {
		"flow": "flow",
		"test": "jest",
		"lint": "eslint --cache --format=eslint-formatter-pretty .",
		"dev-server": "cross-env NODE_ENV=development WEBPACK_HOT=true API_ENDPOINT=//$npm_package_config_hostname:$npm_package_config_port DEBUG=server:* node --max_old_space_size=4096 server/index.js",
		"prestart": "yarn install && yarn run test",
		"start": "yarn run nodemon",
		"bundle": "yarn run prestart && yarn run bundle-js && yarn run render-template",
		"bundle-js": "cross-env yarn install && cross-env BABEL_ENV=production NODE_ENV=production ./node_modules/webpack/bin/webpack.js --progress",
		"render-template": "mkdirp ./build && hbs --data '{ \"bundle\": \"bundle.js\" }' ./server/views/index.handlebars -o ./build",
		"docker": "cross-env-shell docker build --no-cache -t $npm_package_name:$npm_package_version .",
		"styleguide": "styleguidist server",
		"styleguide:build": "styleguidist build",
		"nodemon": "./node_modules/nodemon/bin/nodemon.js --config nodemon.json --exec yarn run dev-server",
		"jsdoc": "jsdoc -c jsdoc.json"
	},
	"author": {
		"name": "Josh Li",
		"url": "https://github.com/maddrag0n"
	},
	"contributors": [
		{
			"name": "Thiemo Krause",
			"url": "https://github.com/thiemok"
		},
		{
			"name": "David Silva",
			"url": "https://github.com/zGrav"
		}
	]
}
