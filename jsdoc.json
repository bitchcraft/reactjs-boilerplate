{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [
					"./app",
					"./common/constants",
					"./common/tools",
					"./server"
				],
        "includePattern": ".(js|jsx)$",
        "excludePattern": "(node_modules/|docs|__tests__)"
    },
    "plugins": [
        "plugins/markdown",
        "node_modules/jsdoc-babel",
        "node_modules/jsdoc-react-proptypes/lib/plugin"
    ],
    "babel": {
      "presets": [
          "env",
          "stage-0",
          "react",
          "flow"
      ],
      "plugins": [
          "add-module-exports",
          "transform-runtime",
          [ "module-resolver", {
              "root": [ "./" ],
              "alias": {
                  "actions": "./app/actions",
                  "app": "./app",
                  "components": "./app/components",
                  "constants": "./common/constants",
                  "containers": "./app/containers",
                  "server": "./server",
                  "services": "./app/services",
                  "tools": "./common/tools"
              }
          } ]
      ],
      "extensions": ["js", "jsx"]
    },
    "opts": {
        "template": "node_modules/docdash",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
		"docdash": {
			"static": true,
			"sort": true
		}
}
