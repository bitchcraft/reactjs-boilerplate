{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [
					"./app",
					"./common/constants",
					"./common/tools",
					"./server"
				],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs|__tests__)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "node_modules/docdash",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
		"docdash": {
			"static": true,
			"sort": true
		}
}
